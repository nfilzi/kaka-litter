<%= content_for(:after_js) do %>
  <script>
    $(".button-left").on("click", function (e) {
      e.preventDefault();

      var button = $(this);
      var qty_input = button.closest(".qty-selector").find(".qty-value");
      var qty = qty_input.val();

      if (qty > 1) {
        qty = parseFloat(qty) - 1;
      } else {
        qty = 0
      }
      qty_input.val(qty);
    });

    $(".button-right").on("click", function (e) {
      e.preventDefault();

      var button = $(this);
      var qty_input = button.closest(".qty-selector").find(".qty-value");
      var qty = qty_input.val();

      if (qty == "") {
        qty = 1
      } else {
        qty = parseFloat(qty) + 1;
      }

      qty_input.val(qty);
    });
  </script>
<% end %>